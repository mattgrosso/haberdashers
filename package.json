{
  "name": "haberdashers",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "update-version": "node src/assets/javascript/version.js",
    "serve": "nodemon --watch .env --exec \"vue-cli-service serve\"",
    "build": "yarn update-version && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "deploy": "yarn build && aws s3 sync dist/ s3://haberdashers --profile home && aws cloudfront create-invalidation --distribution-id E10LZ1505D1O9G --paths '/*' --profile home > invalidation_output.txt"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "core-js": "^3.8.3",
    "firebase": "^11.2.0",
    "nodemon": "^3.1.9",
    "vue": "^3.2.13",
    "vue-router": "^4.5.0",
    "vuedraggable": "^4.1.0",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^8.0.3",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "plugin:promise/recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/no-unused-components": "off",
      "vue/multi-word-component-names": "off",
      "no-trailing-spaces": "warn",
      "eol-last": "off",
      "quotes": [
        "off",
        "double"
      ],
      "semi": "off",
      "comma-dangle": "off",
      "space-before-function-paren": "warn",
      "indent": "warn",
      "no-undef": "warn",
      "padded-blocks": "warn",
      "object-curly-spacing": "warn",
      "array-bracket-spacing": "warn",
      "no-unused-vars": "warn",
      "no-empty": "warn",
      "prefer-const": "warn",
      "no-multiple-empty-lines": "warn",
      "no-useless-return": "off",
      "no-debugger": "warn",
      "vue/no-deprecated-slot-scope-attribute": "warn",
      "space-infix-ops": "warn",
      "space-before-blocks": "warn",
      "no-unreachable": "warn",
      "no-constant-condition": "warn",
      "operator-linebreak": "off",
      "multiline-ternary": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
